<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @bus.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @bus.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="bus[seats]" class="fieldLabel">Seats</label>
            <input type="text" id="bus[seats]" name="bus[seats]" <%= placeholder("Seats") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="bus[company_id]" class="fieldLabel">Company</label>
            <input type="text" id="bus[company_id]" name="bus[company_id]" <%= placeholder("Company") %> />
          </div>

          <div>
            <select>
              <option value="1">One</option>
              <option value="1">Two</option>
              <option value="1">Three</option>
            </select>
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
