<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @bus.object %>
    <h1>Edit <%= @bus.seats%></h1>
    <%= link_to "Delete", :action => :delete, :id => @bus.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @bus.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Seats: </td>
              <td class="itemValue"><input type="text" name="bus[seats]" value="<%= @bus.seats %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Company: </td>
              <td class="itemValue"><input type="text" name="bus[company_id]" value="<%= @bus.company_id %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
