<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @bus.seats %></h1>
    <a href="<%= url_for :action => :show, :id => @bus.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @bus.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @bus.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="bus[seats]" class="fieldLabel">Seats</label>
            <input type="text" id="bus[seats]" name="bus[seats]" value="<%= @bus.seats %>" <%= placeholder( "Seats" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="bus[company_id]" class="fieldLabel">Company</label>
            <input type="text" id="bus[company_id]" name="bus[company_id]" value="<%= @bus.company_id %>" <%= placeholder( "Company" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
