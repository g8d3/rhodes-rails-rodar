= form_for(@bus) do |f|
  - if @bus.errors.any?
    .alert.alert-error
      %h2
        = pluralize(@bus.errors.count, "error")
        prohibited this bus from being saved:
      %ul
        - @bus.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :seats
    %br/
    = f.number_field :seats
  .field
    = f.label :company_id
    %br/
    = f.select :company_id, Company.names_ids
  .actions
    = f.submit class: 'btn btn-primary'
